{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./modules",
    "paths": {
      "@modules/common/*": ["modules/shared/common/*"],
      "@modules/apis/*": ["modules/shared/apis/*"],
      "@modules/domain-events-dispatcher/*": ["modules/shared/domain-events-dispatcher/*"],
      "@modules/back-office/*": ["modules/shared/back-office/*"],
      "@modules/books": ["modules/books/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "cdk.out"]
}
